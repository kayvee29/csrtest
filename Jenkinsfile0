#!/usr/bin/env groovy

properties([[$class: 'ParametersDefinitionProperty', parameterDefinitions: [

// Env Config
[$class: 'hudson.model.StringParameterDefinition', name: 'PHASE', defaultValue: "", description: "Please enter the phase of the project, GENERATION or EXECUTION or Pre-check-button"],
[$class: 'hudson.model.StringParameterDefinition', name: 'ENV', defaultValue: "", description: "Please enter the environment details"]
]]])

node("master") {
	withEnv(["PATH=${env.PATH}:${tool 'ansible'}", "ANSIBLE_HOME=${tool 'ansible'}"]) {
		stage('Checkout') {
			checkout scm
		}
			if ("${PHASE}" == "Pre-check-button") {
				stagePreCheck()
			}
  }
}

def stagePreCheck() {
	stage('Pre-Check') {
		echo "Upload Script Generation Successful"
	}
}
